							<form:option value="" label="请选择"/>
							<form:options items="${fns:getDictList('sex')}" itemLabel="label" itemValue="value" htmlEscape="false"/>
						</form:select>
					</td>
				</tr> 
				<tr>
					<td class="width-10 active"><label class="pull-right">出生年月：</label></td>
					<td class="width-15">
