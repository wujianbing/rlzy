.news-v{
	display: flex;
	margin-top: 20px;
}
.left-v{
	padding: 30px 35px;
	font-weight: 600;
}
.news-tit{
	font-size: 18px;
	color: #4B96CF;
	padding: 5px 0;
	border-bottom: 2px solid #4B96CF;
	margin-bottom: 20px;
}
.newstit-ul>li{
	color: #616161;
	font-size: 16px;
	padding: 4px 10px;
	cursor: pointer;
	user-select: none;
}
.newstit-ul>li.active{
	color: #ffffff;
	background: #4B96CF;
}
.news-cont{
	padding: 30px 80px;
	color: #505050;
	font-size: 15px;
}
.news-ul,newsdeta-cont{
	padding-top: 20px;
	height: 536px;
	overflow: auto;
}
.news-li{
	padding: 10px 5px;
	border-bottom: 1px #767676 dotted;
	cursor: pointer;
}
.news-li:hover{
	background: #fafafa;
}
.newsli-top{
	display: flex;
	align-items: center;
}
.newsli-top>div:first-child{
	color: #4B96CF;
	width: 20px;
}
.newsli-top>div:nth-child(2){
	flex: 7;
	font-size: 16px;
	max-width: 300px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.newsli-top>div:nth-child(3){
	flex: 2;
	text-align: right;
}
.newsli-deta{
	color: #767676;
	padding: 5px 0 5px 20px;
	text-align: justify;
	font-size: 13px;
}
.news-cont-top{
	font-size: 18px;
	color: #4B96CF;
	padding: 5px 0;
	border-bottom: 2px solid #4B96CF;
	font-weight: 600;
}
.paging{
	text-align: center;
    margin: 40px -40px 20px;	
}
.n-tit{
	padding: 10px 0;
	border-bottom: 1px solid #dddddd;
}
.n-tit h3{
	text-align: center;
	padding: 10px 40px;
}
.data-v{
	display: flex;
}
.data-v>div{
	flex: 1;
	text-align: center;
	width: 500px;
	margin: 0 auto;
}
.n-cont{
	padding: 22px 0;
}
.n-cont p{
	text-indent: 2em;
	text-indent: 2em;
    line-height: 30px;
    font-size: 16px;
    margin-bottom: 10px;
}

.n-cont{
	text-indent: 2em;
    line-height: 29px;
}
.n-cont span{
	font-size:16px !important;
}



