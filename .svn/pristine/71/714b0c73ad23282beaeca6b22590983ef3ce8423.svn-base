		List<VideoModel> videoModelList = videoModelService.findList(videoModel);
		for(int i = 0;i<videoModelList.size();i++){
			VideoModel v = videoModelList.get(i);
			String count = videoService.getRow(v.getId());
			v.setSpe1(count);
